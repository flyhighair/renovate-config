{
  "name": "@flyhighair/renovate-config",
  "version": "0.0.1",
  "main": "none",
  "repository": "https://github.com/flyhighair/renovate-config.git",
  "author": "flyhighair <flyhighup.air25@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "renovate-config-validator"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "timezone": "Asia/Tokyo",
      "schedule": [
        "every weekend"
      ],
      "assignees": [
        "flyhighair",
        "hakshu"
      ],
      "labels": [
        "renovate"
      ],
      "patch": {
        "automerge": true
      },
      "packageRules": [
        {
          "matchDepTypes": [
            "devDependencies"
          ],
          "automerge": true
        }
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "husky": "4.3.8",
    "renovate": "24.42.1"
  }
}
